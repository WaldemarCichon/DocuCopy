<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocuCopy.MainPage"
             Title="Dokumente kopieren">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Text="Titel" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
        <ListView Grid.Row="1" x:Name="Logs" CachingStrategy="RetainElement">
            <ListView.ItemTemplate>

                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="Blah" HorizontalOptions="Start" VerticalOptions="Center" TextColor="AliceBlue"/>
                            <Label Text="{Binding Text}"/>
                        </HorizontalStackLayout>

                    </ViewCell>
                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
        <ProgressBar Grid.Row="2" x:Name="Progress" Progress="0.6" VerticalOptions="Center"/>
        <Button Text="Go" Grid.Row="3" x:Name="StartButton" Clicked="StartButton_Clicked"/>
    </Grid>

</ContentPage>

